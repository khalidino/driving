@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink( User.Identity.GetUserName(),"index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage", Class= "btn btn-outline-info mr-3 text-center" })
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()" class="btn btn-outline-info ">Log Out</a></li>
    </ul>
    }
}
