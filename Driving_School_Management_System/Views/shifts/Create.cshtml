@model Driving_School_Management_System.Models.SHIFT

@{
    ViewBag.Title = "Insert Data Shifts";
}
<hr />
<h2 class="text-center text-purple">Insert Data Shift</h2>
<hr />


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
       
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.WhichShift, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.WhichShift, new { htmlAttributes = new { @class = "form-control",@placeholder="Enter Shift Time EX: Morning"} })
                @Html.ValidationMessageFor(model => model.WhichShift, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <a href="/shifts/index" type="submit"   class="btn btn-primary" >Back to List</a>
                |
                <input type="submit" value="Save Data" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

 
