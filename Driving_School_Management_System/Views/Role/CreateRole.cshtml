@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole
@{
    ViewBag.Title = "CreateRole";

}
<div class="container">

    @using (Html.BeginForm("CreateRole", "Role"))
    {
        <div class="form-group">
            @Html.LabelFor(a => a.Name)
            @Html.TextBoxFor(a => a.Name, new { @Class = "form-control" })
            @Html.ValidationMessageFor(a => a.Name)
        </div>

        <div class="form-group">
            @Html.ActionLink("Role List", "RoleList", "Role", new { @class = "btn btn-warning" }) |
            <input type="submit" value="Save Role" class="btn btn-success" />
        </div>
    }
</div>
